<h1>URL Shortening Machine</h1>

<% flash.keys.each do |msg| %>
  <p><%= flash[msg] %></p>
<% end %>

<h1>All URLS</h1>
<table>
  <tr>
    <th>Long URL</th>
    <th>Short URL</th>
  </tr>
  <% urls.each do |url| %>
  <tr>
    <td><%= url["long_url"] %></td>
    <td><a href="/<%= url["short_url"] %>"/>http://localhost:4567/<%= url["short_url"] %></a></td>
  </tr>
  <% end %>
</table>

<h1>Submit Your URL!</h1>
<form action="/" method="post">
  <label for="long_url">Your Long URL</label>
  <input type="text" name="long_url">
  <input type="submit" value="Shorten!">
</form>
